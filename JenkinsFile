pipeline{
    agent any
    environment {
        JAVA_HOME='C:/Program Files/Java/jdk-17.0.3.1'
    }
    stages{
        stage('Clone git Repo'){
        steps{
            dir('JenkinsPipelineLearnng'){
        bat 'git clone https://github.com/varshneylavina/JenkinsPipelineLearnng'
        }
        }
        stage('Clean Stage'){
            steps{
                dir("JenkinsPipelineLearnng"){
                    bat 'mvn clean'
                }
            }
        }
                stage('Compile Stage'){
            steps{
                dir("JenkinsPipelineLearnng"){
                    bat 'mvn compile'
                }
            }
        }
                stage('install Stage'){
            steps{
                dir("JenkinsPipelineLearnng"){
                    bat 'mvn install'
                }
            }
        }
    }
}